<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".Main2Activity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.quizapp.Main2Activity">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who is the President of South Africa?"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:background="#E0E0E0"/>

    <RadioGroup
        android:id="@+id/rg_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/zuma_400">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thabo Mbheki"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_option_a" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jacob Zuma"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_option_b" />

        <RadioButton
            android:id="@+id/rb_option_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Julius Malema"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who is the premier of KwaZulu Natal?"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/textView1"
        android:background="#E0E0E0"
        android:layout_marginTop="40dp"/>

    <RadioGroup
        android:id="@+id/rg_options1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kzn">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supra Mahumapelo"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"

            android:id="@+id/rb_option_a1" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Willies Mchunu"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_option_b1" />

        <RadioButton
            android:id="@+id/rb_option_c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stanely Mathambatha"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is the premier of Eastern Cape?"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#E0E0E0"
        android:layout_marginTop="40dp"/>

    <RadioGroup
        android:id="@+id/rg_options2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/east">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Phumulo Masualle"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_option_a2" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senzo Mchunu"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:id="@+id/rb_option_b2" />

        <RadioButton
            android:id="@+id/rb_option_c2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stanely Mathambatha"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is the premier of North West?"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#E0E0E0"
        android:layout_marginTop="40dp" />


        <RadioGroup
        android:id="@+id/rg_options3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/nw">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phumulo Masualle"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_option_a3" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="David Mahura"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:id="@+id/rb_option_b3" />

        <RadioButton
            android:id="@+id/rb_option_c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supra Mahumapelo"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is the premier of Limpopo?"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/textView4"
        android:background="#E0E0E0"
        android:layout_marginTop="40dp"/>

    <RadioGroup
        android:id="@+id/rg_options4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/limpompo">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ace Magashule"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_option_a4" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stanely Mathabatha"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_option_b4" />

        <RadioButton
            android:id="@+id/rb_option_c4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="David Mabuza"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score"
            android:onClick="display"
            android:layout_margin="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:onClick="next"
            android:layout_margin="16dp"/>


    </LinearLayout>


</LinearLayout>
</RelativeLayout>

</ScrollView>