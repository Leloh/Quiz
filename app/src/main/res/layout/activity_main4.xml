<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".Main2Activity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.quizapp.Main2Activity"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who is the Minister of Communication?"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/textView"
                android:background="#E0E0E0"
                android:layout_marginTop="40dp"/>

            <RadioGroup
                android:id="@+id/rg_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/faith">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nosiviwe Mapisa"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_a" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faith Muthabi"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_b" />

                <RadioButton
                    android:id="@+id/rb_option_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edna Molewa"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who is the Minister of Finance?"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/textView1"
                android:background="#E0E0E0"
                android:layout_marginTop="40dp"/>

            <RadioGroup
                android:id="@+id/rg_options1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/pravin">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blade Nzimande"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_a1" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nkosinathi Nhleko"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_b1" />

                <RadioButton
                    android:id="@+id/rb_option_c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pravin Gordon"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who is the Minister of Science and Technology?"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/textView2"
                android:background="#E0E0E0"
                android:layout_marginTop="40dp"/>

            <RadioGroup
                android:id="@+id/rg_options2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/naledi2">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Naledi Pandor"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_a2" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thulas Nxesi"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_b2" />

                <RadioButton
                    android:id="@+id/rb_option_c2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Siyabonga Cwele"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who is the Minister of Education?"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/textView3"
                android:background="#E0E0E0"
                android:layout_marginTop="40dp"/>

            <RadioGroup
                android:id="@+id/rg_options3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/angie">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lindiwe Sisulu"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_a3" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Angie Motshekga"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_b3" />

                <RadioButton
                    android:id="@+id/rb_option_c3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blade Nzimande"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who is the Minister of Health?"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/textView4"
                android:background="#E0E0E0"
                android:layout_marginTop="40dp"/>

            <RadioGroup
                android:id="@+id/rg_options4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/aron">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Melusi Gigaba"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_a4" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nathi Mthethwa"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rb_option_b4" />

                <RadioButton
                    android:id="@+id/rb_option_c4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aaron Motshoaledi"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="40dp"/>
            </RadioGroup>


          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score"
                android:onClick="display"
                android:layout_margin="16dp"/>

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="next"
                  android:onClick="next"
                  android:layout_margin="16dp"/>


          </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>